# Environment to build manylinux2010 ngraph-core

FROM markrwilliams/manylinux2

RUN curl -O https://cmake.org/files/v3.6/cmake-3.6.3-Linux-x86_64.sh && \
  chmod +x ./cmake-3.6.3-Linux-x86_64.sh && \
  ./cmake-3.6.3-Linux-x86_64.sh --prefix=/usr/local --skip-license && \
  rm ./cmake-3.6.3-Linux-x86_64.sh
RUN /opt/python/cp27-cp27mu/bin/pip install virtualenv
RUN ln -s /opt/python/cp27-cp27mu/bin/python /usr/local/bin/python
RUN ln -s /opt/python/cp27-cp27mu/bin/python2 /usr/local/bin/python2
RUN ln -s /opt/python/cp27-cp27mu/bin/python2.7 /usr/local/bin/python2.7
RUN ln -s /opt/python/cp27-cp27mu/bin/pip /usr/local/bin/pip
RUN ln -s /opt/python/cp27-cp27mu/bin/virtualenv /usr/local/bin/virtualenv

WORKDIR /home
